{% extends 'interface.html.twig' %}
 {% block stylesheet %}
     {{locations}}
     {% for hero in heroes %}
     {% if path[3] == hero.id %}
     <link rel="stylesheet" href="/assets/css/{{ hero.name }}-interface.css">
         {% endif %}
     {% endfor %}
     <link rel="stylesheet" href="/assets/css/story.css">
 {% endblock %}
{% block title %}Story{% endblock title %}
{% block main %}
    {{locations}}

    <div id="history">

        <p>{{story.story}}</p>
        <h1>{{locations}}</h1>
    </div>

    <div id="responses">
        <button class="response"><a href="/combat/fight/$id" style="text-decoration: none; color: white"><p>Réponse 1</p></a></button>

        <button class="response"><a href="/enigma/enigma1/$id" style="text-decoration: none; color: white"><p>Réponse 2</p></a></button>

        <button class="response"><p>Réponse 3</p></button>
    </div>

    <!---  bagScript --->
    <div id="bagScript">
        <p>Bag</p>
        <ul>
            {% for hero in heroes %}
                {% if path[3] == hero.id %}
                    {% if weapons is empty %}
                    {% else %}
                        {% for weapon in weapons %}
                            <li>
                                <button>{{weapon.name}}</button>
                            </li>
                        {% endfor %}
                    {% endif %}

                {% endif %}
            {% endfor %}
        </ul>
    </div>
    <div class="location">
        <h4>{{locations}}</h4>

    </div>

    <!--<button class="restartGame">Restart</button>-->


    <script src="/assets/JS/bagScript.js"></script>
{% endblock %}