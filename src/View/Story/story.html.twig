{% extends 'interface.html.twig' %}

 {% block stylesheet %}
     {% for hero in heroes %}
        {% if path[3] == hero.id %}
            <link rel="stylesheet" href="/assets/css/{{ hero.name }}-interface.css">
        {% endif %}
     {% endfor %}
     <link rel="stylesheet" href="/assets/css/story.css">
 {% endblock %}
{% block title %}Story{% endblock title %}


{% block main %}

    <div id="history">

        <p>{{ story.story }}</p>

    </div>

    <div id="responses">
        {% for hero in heroes %}
        {% if path[3] == hero.id %}
        {% for choice in choices %}
            <a class="response" href="/{{ choice.controller }}/{{ choice.consequences }}/{{ hero.id }}"><p>{{ choice.choice }}</p></a>
        {% endfor %}
        {% endif %}
        {% endfor %}
    </div>

    <!---  bagScript --->
    <div id="bagScript">

        <p>Bag</p>
        <ul>
            {% for hero in heroes %}
                {% if path[3] == hero.id %}
                    {% if weapons is empty %}
                    {% else %}
                        {% for weapon in weapons %}
                            <li>
                                <button>{{weapon.name}}</button>
                            </li>
                        {% endfor %}
                    {% endif %}

                {% endif %}
            {% endfor %}
        </ul>

    {% for hero in heroes %}
    {% if path[3] == hero.id %}
    <ul id="statsScript">
        <li><img src="/assets/images/life.png" alt="" class="logoStats"> Health: {{hero.health}}</li>
        <li><img src="/assets/images/sword.png" alt="" class="logoStats"> Attack: {{hero.attack}}</li>
        <li><img src="/assets/images/gold.png" alt="" class="logoStats"> Gold: {{hero.gold}}</li>
    </ul>
    {% endif %}
    {% endfor %}

    </div>

    <script src="/assets/JS/bagScript.js"></script>
{% endblock %}